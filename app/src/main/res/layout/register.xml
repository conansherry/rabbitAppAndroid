<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_layout"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"

    >
    <TextView
        android:id="@+id/register_label"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="注册"
        android:textSize="14pt"
        />
    <EditText
        android:id="@+id/register_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_label"
        android:paddingLeft="60dip"/>
    <TextView android:id="@+id/register_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/register_username"
        android:layout_alignTop="@id/register_username"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:text="用户名"
        />
    <EditText
        android:id="@+id/register_password"
        android:layout_below="@id/register_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:paddingLeft="55dip"
        />
    <TextView android:id="@+id/register_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/register_password"
        android:layout_alignTop="@id/register_password"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:text="密码"
        />
    <EditText
        android:id="@+id/register_password_confirm"
        android:layout_below="@id/register_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:paddingLeft="55dip"
        />
    <TextView android:id="@+id/register_password_confirm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/register_password_confirm"
        android:layout_alignTop="@id/register_password_confirm"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="5dip"
        android:text="确认密码"
        />
    <Button
        android:id="@+id/okBtn"
        android:layout_below="@id/register_password_confirm"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:text="确定"
        />
</RelativeLayout>
